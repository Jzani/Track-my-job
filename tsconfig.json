{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": ["./types", "node_modules/@types"],
    "types": ["babel__core", "babel__generator"],
    "baseUrl": "src", // Ensure this points to the 'src' directory
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"], // Maps '@' to 'src/components'
      "@/lib/*": ["lib/*"] // Maps '@/lib' to 'src/lib'
    }
  },
  "include": ["src", "types"]
}